{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "feature",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "string.quoted",
					"begin": "(Examples|Scenarios)",
					"end": "^\\s*\\n\\s*$",
					"beginCaptures": {
						"0": {
							"name": "support.function"
						}
					},
					"patterns": [
						{
							"name": "variable.language",
							"begin": "(:)([^\\n]*)?\\n",
							"end": "\\n",
							"beginCaptures": {
								"0": {
									"name": "variable.language"
								},
								"1": {
									"name": "support.function.git-rebase"
								},
								"2": {
									"name": "support.function.git-rebase"
								}
							}
						}
					]
				},
				{
					"name": "support.function",
					"match": "(Scenario( Outline| Template)?|Feature|Example|Background)"
				},
				{
					"name": "support.class",
					"match": "(Given|When|Then|And|But)"
				},
				{
					"name": "keyword.control.flow.js",
					"match": "(@[a-zA-Z0-9_-]+)"
				},
				{
					"name": "keyword.operator.feature",
					"match": "\\|"
				},
				{
					"name": "variable.language",
					"match": "<[^>]*>"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.feature",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.feature",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment",
			"patterns": [
				{
					"name": "comment",
					"match": "^\\s*#.*"
				}
			]
		}
	},
	"scopeName": "source.feature"
}
